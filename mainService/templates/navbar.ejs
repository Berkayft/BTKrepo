    </div>
</div>
<script>
    // Toggle for showing/hiding the fullscreen menu
    const menuButton = document.getElementById('menu-button');
    const fullscreenMenu = document.getElementById('fullscreenMenu');
    const menuItems = document.querySelectorAll('.menu-item'); // Menü öğelerini seç

    menuButton.addEventListener('click', (event) => {
        event.stopPropagation();
        fullscreenMenu.classList.toggle('hidden');
        
        if (!fullscreenMenu.classList.contains('hidden')) {
            // Menü açıldığında animasyonu başlat
            setTimeout(() => {
                fullscreenMenu.classList.add('scale-100', 'opacity-100');
                menuItems.forEach((item, index) => {
                    item.classList.add('opacity-100', 'translate-y-0'); // Animasyon sınıflarını ekle
                });
            }, 10);
        } else {
            // Menü kapandığında animasyonu sıfırla
            fullscreenMenu.classList.remove('scale-100', 'opacity-100');
            menuItems.forEach((item) => {
                item.classList.remove('opacity-100', 'translate-y-0'); // Animasyon sınıflarını kaldır
            });
        }
    });

    // Close the menu when clicking outside of specific items
    document.addEventListener('click', (event) => {
        const clickedOutsideMenuItems = !Array.from(menuItems).some(item => item.contains(event.target));
        if (clickedOutsideMenuItems && !menuButton.contains(event.target)) {
            fullscreenMenu.classList.add('hidden');
            fullscreenMenu.classList.remove('scale-100', 'opacity-100');
            menuItems.forEach((item) => {
                item.classList.remove('opacity-100', 'translate-y-0'); // Animasyonu sıfırla
            });
        }
    });
</script>