<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Profile</title>
    <!-- Tailwind CSS CDN -->
    <script src="https://cdn.tailwindcss.com"></script>
</head>

<body class="bg-gray-100">
    <!-- Navbar -->
    <nav class="bg-white shadow-lg">
        <div class="container mx-auto px-4 py-2 flex justify-between items-center">
            <div class="flex items-center">
                <a href="/" class="text-lg font-semibold text-gray-800 hover:text-gray-600">Home</a>
                <a href="/slideHub" class="ml-6 text-lg font-semibold text-gray-800 hover:text-gray-600">SlideHub</a>
            </div>
            <div class="flex items-center">
                <span class="text-lg text-gray-800 font-semibold mr-4"><%= user.fullName %></span>
                <a href="/profile" class="text-gray-800 text-2xl hover:text-gray-600">&#128100;</a>
            </div>
        </div>
    </nav>

    <!-- Profile Content -->
    <div class="container mx-auto mt-8 px-4">
        <h1 class="text-2xl font-bold text-gray-800">My Slides</h1>

        <div class="flex flex-wrap mt-4">
            <% if (user.slides.length > 0) { %>
                <% user.slides.forEach(function(slide) { %>
                    <div class="bg-white shadow-md p-4 m-2 rounded-lg w-48 text-center">
                        <a href="/slides/<%= slide._id %>" class="text-lg font-semibold text-gray-800 hover:text-blue-500">
                            <%= slide.title %>
                        </a>
                    </div>
                <% }) %>
            <% } else { %>
                <p class="text-lg text-gray-600">You have no slides yet.</p>
            <% } %>
        </div>
    </div>
</body>

</html>
