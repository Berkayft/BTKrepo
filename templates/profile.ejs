<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://cdn.tailwindcss.com"></script>
    <title>Fluctos</title>
    <style>
        html, body {
            height: 100%;
            margin: 0;
            display: flex;
            flex-direction: column;
            background-color: #e6e6e6;
        }
        .content {
            flex: 1;
        }
        footer {
            background-color: var(--main-color, #333);
            color: white;
            text-align: center;
            padding: 10px;
        }
    </style>
</head>
<body>
    <%- include('navbar'); %>

    <!-- Main Content -->
    <div class="content container mx-auto my-5 p-5 mt-16">
        <div class="md:flex no-wrap md:-mx-2">

            <!-- Left Sidebar/Profile Card -->
            <div class="w-full md:w-3/12 md:mx-2 mb-6">
                <div class="bg-white p-3 border-t-4 rounded-2xl shadow-md">
                    <div class="image overflow-hidden">
                        <img class="h-auto w-full mx-auto rounded-full" src="profile_photo.svg" alt="Profile Photo">
                    </div>
                    <h1 class="text-gray-900 font-bold text-xl leading-8 my-1"><%= user.fullName %></h1>
                    <ul class="bg-gray-100 text-gray-600 py-2 px-3 mt-3 divide-y rounded shadow-sm">
                        <li class="flex items-center py-3">
                            <span>Status</span>
                            <span class="ml-auto">
                                <span class="bg-green-500 py-1 px-2 rounded text-white text-sm">Active</span>
                            </span>
                        </li>
                        <li class="flex items-center py-3">
                            <span>Member since</span>
                            <span class="ml-auto">Oct 07, 2024</span>
                        </li>
                    </ul>
                </div>
                
                <!-- Token and Slide Buttons -->
                <div class="my-4 bg-white p-5 rounded-2xl shadow-lg hover:scale-105 transform transition">
                    <div class="flex items-center space-x-3 text-2xl font-semibold text-gray-900 mb-4">
                        <span class="text-green-500">
                            <!-- Icon -->
                            <svg class="h-6 w-6" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24">
                                <path d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857M15 7a3 3 0 11-6 0 3 3 0 016 0z" />
                            </svg>
                        </span>
                        <span>Slaid Process</span>
                    </div>
                    <div class=" grid grid-cols-1 md:grid-cols-2 gap-4 text-center">
                        <h2 class="text-l font-semibold mt-1 text-gray-700">Token Count: <span id="tokenCount" class="text-green-500 font-bold">10</span></h2>
                        <a href="/sli" class="bg-green-500 text-white px-1 py-1 text-l rounded-2xl hover:bg-green-600 transition duration-200">Buy Token</a>
                    </div>
                    <div class="flex items-center justify-center my-4 space-x-4">
                        <img src="slideIcon.svg" alt="icon " class="w-12 h-12 object-cover">
                        <a href="/" class="bg-blue-500 text-white px-4 py-2 rounded-2xl hover:bg-blue-600 transition duration-200">Slide Generator</a>
                    </div>
                </div>
            </div>

            <!-- Right Sidebar / Profile Details -->
            <div class="w-full md:w-9/12 mx-2 mt-2">
                <!-- Profile Details Section -->
                <div class="bg-white p-6 rounded-lg shadow-md mb-8">
                    <h2 class="text-2xl font-semibold mb-4 border-b-2 border-gray-200 pb-2">Profile Details</h2>
                    <div class="flex items-center mb-4">
                        <p class="text-lg"><strong>Name & Surname:</strong> <%= user.fullName %></p>
                    </div>
                    <div class="flex items-center mb-4">
                        <p class="text-lg"><strong>E-mail:</strong> <%= user.email %></p>
                    </div>
                    <div class="flex items-center mb-4">
                        <p class="text-lg"><strong>Role:</strong> <%= user.role %></p>
                    </div>
                </div>
                <% 
                const users = [
                    { name: "Ensar Kulaç", value: 50, slideTitle: "Canlılar Ve Özellikleri", slideDescription: "Canlıların genel özellikleri anlatılır... Bu açıklama biraz uzadı. Buraya daha fazla metin ekleyerek açıklamanın uzunluğunu artırabiliriz." },
                    { name: "Berkay Fehmi Tekin", value: 20, slideTitle: "Hayvanlar Alemi", slideDescription: "Hayvanlar aleminin can alıcı noktalarına değinir." },
                    { name: "Mustafa Res", value: 12, slideTitle: "Su ve Yaşam", slideDescription: "Suyun yaşam için önemi anlatılır." },
                    { name: "Aslan aBİ", value: 13, slideTitle: "Eğitim ve Teknoloji", slideDescription: "Eğitim ve teknolojinin rolü açıklanır." }
                ];
                %>

                <!-- Slide Cards Section -->
                <h1 class="text-4xl font-bold mt-10 mb-10">My Slides</h1>
                <section class="text-gray-700 font-bold">
                    <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                        <% users.forEach((user, index) => { %>
                            <div class="border-2 border-gray-200 bg-gray-100 font-bold border-opacity-60 rounded-lg overflow-hidden">
                                <img class="lg:h-48 md:h-36 w-full object-cover object-center" src="slaid_image/<%= index + 1 %>.jpeg" alt="Slide Image"/>
                                <div class="p-4">
                                    <h2 class="text-xs font-bold text-green-400 uppercase">Slide Title</h2>
                                    <h1 class="text-lg font-medium text-gray-900"><%= user.slideTitle %></h1>
                                    <h2 class="text-xs font-bold text-green-400 uppercase">Description</h2>
                                    <p class="text-gray-700"><%= user.slideDescription %></p>
                                    <h2 class="text-xs font-bold text-green-400 uppercase">Value</h2>
                                    <p class="text-lg font-medium text-gray-900"><%= user.value %></p>
                                </div>
                                <div class="p-4">
                                    <a href="/" class="text-green-800 inline-flex items-center">More Info
                                        <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" fill="none">
                                            <path d="M5 12h14"></path>
                                            <path d="M12 5l7 7-7 7"></path>
                                        </svg>
                                    </a>
                                </div>
                            </div>
                        <% }); %>
                    </div>
                </section>
            </div>
        </div>
    </div>

    <%- include('footer') %>
</body>
</html>
