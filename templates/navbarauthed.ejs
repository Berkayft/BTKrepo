<script>
    // Toggle for showing/hiding the authenticated dropdown menu
    const authMenuButton = document.getElementById('auth-menu-button');
    const authDropdownMenu = document.getElementById('authDropdownMenu');

    authMenuButton.addEventListener('click', (event) => {
        event.stopPropagation();
        authDropdownMenu.classList.toggle('hidden');
        setTimeout(() => {
            authDropdownMenu.classList.toggle('scale-100', !authDropdownMenu.classList.contains('hidden'));
            authDropdownMenu.classList.toggle('opacity-100', !authDropdownMenu.classList.contains('hidden'));
        }, 10);
    });

    // Close the dropdown when clicking outside of it
    document.addEventListener('click', (event) => {
        if (!authMenuButton.contains(event.target) && !authDropdownMenu.contains(event.target)) {
            authDropdownMenu.classList.add('hidden');
            authDropdownMenu.classList.remove('scale-100', 'opacity-100');
        }
    });
</script>
